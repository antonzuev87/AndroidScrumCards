<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainQuestionFragment" android:id="@+id/frameLayout"
                                             android:background="@android:color/background_light">

    <TextView
            android:text="@string/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat"/>

    <Button
            android:text="@string/fibonacciName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fibonacciButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.49"
            android:padding="15dp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_rounded_background"
            android:textColor="@android:color/background_light"
            android:fontFamily="@font/montserrat"/>

    <Button
            android:text="@string/tshirtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tShirtButtonSizes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fibonacciButton"
            app:layout_constraintVertical_bias="0.0"
            android:padding="15dp"
            android:stateListAnimator="@null"
            android:textColor="@android:color/background_light"
            android:background="@drawable/button_rounded_background"
            android:fontFamily="@font/montserrat"/>
</android.support.constraint.ConstraintLayout>